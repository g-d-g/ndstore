
upstream ocp-wsgi {
  server unix:///run/uwsgi/app/ocp/socket;
}


server {

  # base url for all ocp services
  location /ocp/ {
    rewrite ^/ocp/(.*)$ /$1 break;
    uwsgi_pass  ocp-wsgi;
    include     /etc/nginx/uwsgi_params;
    # increase buffer size to avoid hitting disk
    uwsgi_buffering on;
    uwsgi_buffers 4096 64k;
  }
  
}

